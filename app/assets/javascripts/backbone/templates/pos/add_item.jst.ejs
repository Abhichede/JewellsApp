<form class="form-inline">
    <div class="form-group">
        <label for="category">Particular: </label>
        <select name="category" id="category" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="weight">Weight: </label>
        <input type="text" class="form-control" placeholder="Weight" id="weight">
    </div>

    <div class="form-group">
        <label for="gst_rate">GST Rate: </label>
        <select name="gst_rate" id="gst_rate" class="form-control">
            <option value="0">0%</option>
            <option value="5">5%</option>
            <option value="12">12%</option>
            <option value="18">18%</option>
            <option value="28">28%</option>
        </select>
    </div>

    <div class="form-group pull-right" id="add_btn">
        <a class="btn btn-success" data-action="add_item"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
    <div class="form-group pull-right hidden" id="remove_btn">
        <a class="btn btn-danger" data-action="remove_item"><span class="glyphicon glyphicon-minus"></span></a>
    </div>

</form>